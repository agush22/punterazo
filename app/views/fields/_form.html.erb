<% @field ||= Field.new%>
<%= form_for(@field) do |f| %>
  <% if @field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@field.errors.count, "error") %> prohibited this field from being saved:</h2>

      <ul>
      <% @field.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<section class="row-fluid">
<div class="span6">
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lat %><br />
    <%= f.text_field :lat %>
  </div>
  <div class="field">
    <%= f.label :long %><br />
    <%= f.text_field :long %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
</div>
<div class="span6">
  <div class="field">
    <%= f.label :street %><br />
    <%= f.text_field :street %>
  </div>
  <div class="field">
    <%= f.label :neighbourhood %><br />
    <%= f.text_field :neighbourhood %>
  </div>
  <div class="field">
    <%= f.label :field_type_id %><br />
    <%= f.collection_select  :field_type_id, FieldType.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :mail %><br />
    <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :usage %><br />
    <%= f.select :usage, Field::USAGE, { :include_blank => true} %>
  </div>
</div>
<div class="fluid-row">
  <% unless current_user %>
    <div class="span6">
      <%= recaptcha_tags %>
    </div>
  <% end %>
  <div class="actions span6">
    <%= f.submit class: "btn-large btn-primary"%>
  </div>
</div>
<% end %>
</section>
